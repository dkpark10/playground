{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "strictPropertyInitialization": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "src/__test__",
    "dist"
  ],
  "include": [
    "./src/**/*.ts",
  ]
}

